{
  "openapi": "3.0.1",
  "info": {
    "title": "Smart Home Technologies API",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:32999",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "Склад магазина",
      "description": "API для обеспечения работы склада онлайн магазина"
    }
  ],
  "paths": {
    "/api/v1/warehouse": {
      "put": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Добавить новый товар на склад.",
        "operationId": "newProductInWarehouse",
        "requestBody": {
          "description": "Описание нового товара для обработки складом.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewProductInWarehouseRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Ошибка, товар с таким описанием уже зарегистрирован на складе",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "./common.json#/components/schemas/ApiErrorDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/warehouse/shipped": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Передать товары в доставку.",
        "operationId": "shippedToDelivery",
        "requestBody": {
          "description": "Запрос на передачу в доставку.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ShippedToDeliveryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/warehouse/return": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Принять возврат товаров на склад.",
        "operationId": "acceptReturn",
        "requestBody": {
          "description": "Отображение идентификатора товара на отобранное количество.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": {
                  "type": "integer",
                  "format": "int64"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/warehouse/check": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Предварительно проверить что количество товаров на складе достаточно для данной корзиный продуктов.",
        "operationId": "checkProductQuantityEnoughForShoppingCart",
        "requestBody": {
          "description": "Корзина товаров.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./shopping-cart.json#/components/schemas/ShoppingCartDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Ошибка, товар из корзины отсутствует в БД склада",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "./common.json#/components/schemas/ApiErrorDto"
                }
              }
            }
          },
          "200": {
            "description": "Общие сведения по бронированию",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/BookedProductsDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/warehouse/assembly": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Собрать товары к заказу для подготовки к отправке.",
        "operationId": "assemblyProductsForOrder",
        "requestBody": {
          "description": "Корзина товаров.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AssemblyProductsForOrderRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Общие сведения по бронированию",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/BookedProductsDto"
                }
              }
            }
          },
          "400": {
            "description": "Ошибка, товар не находится в требуемом количестве на складе",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "./common.json#/components/schemas/ApiErrorDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/warehouse/add": {
      "post": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Принять товар на склад.",
        "operationId": "addProductToWarehouse",
        "requestBody": {
          "description": "Запрос на добавление определенного количества определенного товара.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddProductToWarehouseRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Нет информации о товаре на складе",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "./common.json#/components/schemas/ApiErrorDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/warehouse/address": {
      "get": {
        "tags": [
          "Склад магазина"
        ],
        "description": "Предоставить адрес склада для расчёта доставки.",
        "operationId": "getWarehouseAddress",
        "responses": {
          "200": {
            "description": "Актуальный адрес склада",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/AddressDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DimensionDto": {
        "required": [
          "depth",
          "height",
          "width"
        ],
        "type": "object",
        "properties": {
          "width": {
            "minimum": 1,
            "type": "number",
            "description": "Ширина",
            "format": "double"
          },
          "height": {
            "minimum": 1,
            "type": "number",
            "description": "Высота",
            "format": "double",
            "example": 1
          },
          "depth": {
            "minimum": 1,
            "type": "number",
            "description": "Глубина",
            "format": "double",
            "example": 1
          }
        },
        "description": "Размеры товара"
      },
      "NewProductInWarehouseRequest": {
        "required": [
          "dimension",
          "productId",
          "weight"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "description": "Идентификатор товара в БД",
            "format": "uuid",
            "example": "53aa35c8-e659-44b2-882f-f6056e443c99"
          },
          "fragile": {
            "type": "boolean",
            "description": "Признак хрупкости",
            "example": true
          },
          "dimension": {
            "$ref": "#/components/schemas/DimensionDto"
          },
          "weight": {
            "minimum": 1,
            "type": "number",
            "description": "Вес товара",
            "format": "double",
            "example": 1
          }
        },
        "description": "Запрос на добавление нового товара на склад"
      },
      "ShippedToDeliveryRequest": {
        "required": [
          "deliveryId",
          "orderId"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "description": "Идентификатор заказа в БД",
            "format": "uuid",
            "example": "bbaa35c8-e659-44b2-882f-f6056e443c99"
          },
          "deliveryId": {
            "type": "string",
            "description": "Идентификатор доставки в БД",
            "format": "uuid"
          }
        },
        "description": "Запрос на передачу в доставку товаров."
      },
      "BookedProductsDto": {
        "required": [
          "deliveryVolume",
          "deliveryWeight",
          "fragile"
        ],
        "type": "object",
        "properties": {
          "deliveryWeight": {
            "type": "number",
            "description": "Общий вес доставки",
            "format": "double"
          },
          "deliveryVolume": {
            "type": "number",
            "description": "Общие объём доставки.",
            "format": "double"
          },
          "fragile": {
            "type": "boolean",
            "description": "Есть ли хрупкие вещи в доставке."
          }
        },
        "description": "Общие сведения о зарезервированных товарах по корзине."
      },
      "AssemblyProductsForOrderRequest": {
        "required": [
          "orderId",
          "products"
        ],
        "type": "object",
        "properties": {
          "products": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "format": "int64"
            }
          },
          "orderId": {
            "type": "string",
            "description": "Идентификатор заказа в БД",
            "format": "uuid",
            "example": "bbaa35c8-e659-44b2-882f-f6056e443c99"
          }
        },
        "description": "Запрос на сбор заказа из товаров."
      },
      "AddProductToWarehouseRequest": {
        "required": [
          "quantity"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "description": "Идентификатор товара в БД",
            "format": "uuid",
            "example": "53aa35c8-e659-44b2-882f-f6056e443c99"
          },
          "quantity": {
            "minimum": 1,
            "type": "integer",
            "description": "Количество единиц товара для добавления на склад",
            "format": "int64"
          }
        },
        "description": "Запрос на увеличение единиц товара по его идентификатору"
      },
      "AddressDto": {
        "type": "object",
        "properties": {
          "country": {
            "type": "string",
            "description": "Страна."
          },
          "city": {
            "type": "string",
            "description": "Город."
          },
          "street": {
            "type": "string",
            "description": "Улица."
          },
          "house": {
            "type": "string",
            "description": "Дом."
          },
          "flat": {
            "type": "string",
            "description": "Квартира."
          }
        },
        "description": "Представление адреса в системе."
      }
    }
  }
}